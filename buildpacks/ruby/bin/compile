#!/usr/bin/env ruby

# sync output
$stdout.sync = true

$:.unshift File.expand_path("../../lib", __FILE__)

require 'devstep_buildpack'

if ENV['DEBUG']
  Thread.current[:out] = $stdout
end

if pack = LanguagePack.detect(ARGV[0], ARGV[1])
  LanguagePack::ShellHelpers.initialize_env(ARGV[2])
  pack.compile
else
  raise 'Error compiling Ruby!'
end
