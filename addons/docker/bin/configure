#!/usr/bin/env bash

set -e            # fail fast
set -o pipefail   # dont ignore exit codes when piping output
# set -x          # enable debugging

CACHE_DIR=$2
DOCKER_CMD=/.devstep/bin/docker
URL=https://get.docker.io/builds/Linux/x86_64/docker-latest

if ! [ -x "${DOCKER_CMD}" ]; then
  if ! [ -f "${CACHE_DIR}/docker" ]; then
    echo "-----> [docker] Downloading latest version from ${URL}"
    curl -l -s $URL > ${CACHE_DIR}/docker
  fi

  cp ${CACHE_DIR}/docker ${DOCKER_CMD}
  chmod +x "${DOCKER_CMD}"
fi

if ! [ -x /sbin/iptables ]; then
  echo "-----> [docker] Installing iptables"
  sudo apt-get update -q && sudo apt-get install iptables -y --force-yes -q
fi

addon_basedir="$( cd -P "$( dirname "$0" )" && pwd )"

cp ${addon_basedir}/wrapdocker "/etc/my_init.d/000-wrapdocker.sh"
chmod +x "/etc/my_init.d/000-wrapdocker.sh"
${addon_basedir}/wrapdocker

echo "-----> [docker] Installed $(docker --version)"

mkdir -p /etc/service/docker
cp $addon_basedir/start-daemon /etc/my_init.d/001-start-docker.sh
chmod +x /etc/my_init.d/001-start-docker.sh

echo "-----> [docker] Starting daemon"
/etc/my_init.d/001-start-docker.sh &>/dev/null || true

echo "-----> [docker] Finished configuration!"
